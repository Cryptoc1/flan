<div>
    {{#if error}}
        <error>{{ error }}</error>
    {{else}}
        <div class="image-grid">
            {{#each images}}
                <a class="image" href="/view/{{ this._id }}">
                    <div class="title">{{ this.title }}</div>
                    <div class="image-container">
                        <img src="data:{{ this.mimeType }};base64,{{ this.data }}">
                    </div>
                </a>
            {{/each}}
        </div>
        <script>
            window.onload = function() {
                initGallery()
            }
        </script>
    {{/if}}
</div>
